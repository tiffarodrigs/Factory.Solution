@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer;

<h3> Engineer Details </h3>
<p><@Html.DisplayFor(m => m.EngineerName)/p>

<h4>Machines this Engineer is licensed to repair</h4>
@if( @Model.JoinEntities.Count == 0 )
{
  <h3>None</h3>
}
@foreach(var join in @Model.JoinEntities )
{
  <li>@Html.ActionLink($"{join.Machine.MachineName}","Details","Machines",new{id=join.Machine.MachineId})</li>
}
<p>@Html.ActionLink("Go back to engineers list","Index")</p>
<p>@Html.ActionLink("Go back to Home", "Index","Home")</p>